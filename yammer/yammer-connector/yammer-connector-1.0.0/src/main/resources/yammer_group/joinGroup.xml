<template xmlns="http://ws.apache.org/ns/synapse" name="joinGroup">

    <parameter name="groupId"
               description="The group ID "/>
    <sequence>

        <property name="uri.var.groupId" expression="$func:groupId"/>
        <property name="Accept-Encoding" action="remove" scope="transport"/>


        <call>
            <endpoint>
                <http method="post"
                      uri-template="https://www.yammer.com/api/v1/group_memberships.json?group_id={uri.var.groupId}"/>
            </endpoint>

        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
    </sequence>
</template>
