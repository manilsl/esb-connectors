<template xmlns="http://ws.apache.org/ns/synapse" name="getNetwork">

    <parameter name="includeSuspended" description="Optional. Include networks the user is suspended in"/>
    <parameter name="excludeOwnMessagesFromUnseen" description="Optional. Exclude the userâ€™s own messages from the unseen count. This is good for unread badges"/>


    <sequence>

        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <property name="uri.var.includeSuspended" expression="$func:includeSuspended"/>
        <property name="uri.var.excludeOwnMessagesFromUnseen" expression="$func:excludeOwnMessagesFromUnseen"/>


        <filter
                xpath="(not(get-property('uri.var.includeSuspended') = '' or (not(string(get-property('uri.var.includeSuspended'))))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;include_suspended=',get-property('uri.var.includeSuspended'))" />
            </then>
        </filter>

        <filter
                xpath="(not(get-property('uri.var.excludeOwnMessagesFromUnseen') = '' or (not(string(get-property('uri.var.excludeOwnMessagesFromUnseen'))))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'&amp;exclude_own_messages_from_unseen=',get-property('uri.var.excludeOwnMessagesFromUnseen'))" />
            </then>
        </filter>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://www.yammer.com/api/v1/networks/current.json?{uri.var.apiParameters}"/>
            </endpoint>

        </call>
        <property name="messageType" value="application/json" scope="axis2"/>



    </sequence>
</template>
