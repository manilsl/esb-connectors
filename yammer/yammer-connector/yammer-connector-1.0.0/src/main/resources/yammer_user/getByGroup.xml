<template xmlns="http://ws.apache.org/ns/synapse" name="getByGroup">

    <parameter name="groupId" description="groupId"/>

    <sequence>

        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <property name="uri.var.groupId" expression="$func:groupId"/>

        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://www.yammer.com/api/v1/users/in_group/{uri.var.groupId}.json"/>
            </endpoint>

        </call>
        <property name="messageType" value="application/json" scope="axis2"/>

    </sequence>
</template>
