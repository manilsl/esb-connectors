<template xmlns="http://ws.apache.org/ns/synapse" name="getSubTopic">

    <parameter name="topicId" description="topicId"/>
    <sequence>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <property name="uri.var.topicId" expression="$func:topicId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="https://www.yammer.com/api/v1/subscriptions/to_topic/{uri.var.topicId}.json"/>
            </endpoint>
        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
    </sequence>
</template>
