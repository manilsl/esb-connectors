<template xmlns="http://ws.apache.org/ns/synapse" name="deleteSubscription">

    <parameter name="targetType" description="Target Type"/>
    <parameter name="targetId" description="target Id"/>
    <sequence>
        <property name="Accept-Encoding" action="remove" scope="transport"/>
        <property name="uri.var.targetType" expression="$func:targetType"/>
        <property name="uri.var.targetId" expression="$func:targetId"/>
        <call>
            <endpoint>
                <http method="delete"
                      uri-template="https://www.yammer.com/api/v1/subscriptions?target_type={uri.var.targetType}&amp;target_id={uri.var.targetId}"/>
            </endpoint>
        </call>
        <property name="messageType" value="application/json" scope="axis2"/>
    </sequence>
</template>
